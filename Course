#include <iostream>
#include <conio.h>//бібліотека для _getch()

using namespace std;
void Gameover()
{
    system("cls");
    cout << "\n\n\n\n\n\n\n\n\n\n\n\n\t\t\t\t     GAME OVER!\n\n\n\n\n\n\n\n\n\n\n";
    exit(0);// завершення програми
 }
void WIN()
{
    system("cls");
    cout << "\n\n\n\n\n\n\n\n\n\n\n\n\t\t\t\t     YOU WIN\n\n\n\n\n\n\n\n\n\n\n";
    exit(0);
}
int DM(int data)//управління даними
{
 if(data == 1)
{
     Gameover();
}
if(data == 3)
{
    WIN();

}
if(data = 2)
return data;
}
