if ( a==13 ) {

    do
    {
        system("cls");// перезапис картинка після кожної дії
        for (int i = 0; i < 24; i++)//переключення по рядах
        {
            for (int j = 0; j < 20; j++)// переключення по коміркам
            {
                if (mas[i][j] == 1)
                {
                    //вигляд блоків(одие блок містить простір для двох символів)
                    cout << static_cast<char>(177);
                    cout << static_cast<char>(177);
                }
                //вигляд вільного простору
                if (mas[i][j] == 0)
                {
                    cout << "  ";
                }
                if (mas[i][j] == 2)
                {
                    //вигляд фішки
                    cout << static_cast<char>(199);
                    cout << static_cast<char>(182);
                }
                if (mas[i][j] == 3)
                {
                    //вигляд фінішу
                    cout << static_cast<char>(4);
                    cout << static_cast<char>(4);
                }
            }
        
            cout << endl;
        }
       
            keypress = _getch();//оперетор _getch() записує адрес нажатої кнопки

            if (keypress == 72 || keypress == 56)//адрес стрілок на клавіаторі(вверх вниз вліво вправо) і на numpad'і (вверх вниз вліво вправо)
            {
                // Вверх
                mas[a1][a2] = 1;//Вибираємо слід
                a1--;//опускаємося/піднімаємося на ряд вгуру/вниз.  Переходимо на строку вліво/вправо.
                DM(mas[a1][a2]);//Перевіряємо чи немає перешкод, якщо немає повертаємо 2.
                mas[a1][a2] = 2;//вибераємо що буде відображатися під час керуваня 0-пустота,1-блок,2-фішкаю
            }
            if (keypress == 80 || keypress == 50)
            {
                // Вниз
                mas[a1][a2] = 1;
                a1++;
                DM(mas[a1][a2]);
                mas[a1][a2] = 2;
            }
            if (keypress == 77 || keypress == 54)
            {
                // Вправо
                mas[a1][a2] = 1;
                a2++;
                DM(mas[a1][a2]);
                mas[a1][a2] = 2;
            }
            if (keypress == 75 || keypress == 52 )
            {
                // Вліво
                mas[a1][a2] = 1;
                a2--;
                DM(mas[a1][a2]);
                mas[a1][a2] = 2;
            }
        
        
    } while (true);
}
else
cout<<" error";
    
}